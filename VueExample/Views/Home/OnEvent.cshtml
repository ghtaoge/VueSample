
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>OnEvent</title>
</head>
<body>
    <div id="app">
        @*<button v-on="{mouseenter:onEnter,mouseleave:onOut}" v-on:click="onClick">点我</button>*@
        @*<form v-on:keyup="onKeyup" v-on:submit.prevent="onSubmit($event)">*@
        @*<form v-on:keyup.enter="onEnter" v-on:submit.prevent="onSubmit($event)">*@
        <!--与asp.net mvc razor引擎的@冲突，所以使用@@-->
        <form @@keyup.enter="onEnter" @@submit.prevent="onSubmit($event)">
            @*< form v-on:submit.stop="onSubmit($event)">*@
            <input type="text" />
            <button type="submit">提交</button>
        </form>
    </div>
    <script src="~/Scripts/vue.js"></script>
    <script>
        var app = new Vue({
            el: '#app',
            methods: {
                onClick: function () {
                    console.log("clicked");
                },
                onEnter: function () {
                    console.log("我进来了");
                },
                onOut: function () {
                    console.log("我出去了");
                },
                onSubmit: function (e) {
                    //e.preventDefault();
                    console.log('submited');
                },
                onKeyup: function () {
                    console.log('key pressed');
                }
            }
        });
    </script>
</body>
</html>
